modules = ["php-8.2", "nodejs-20", "web"]
run = "Codeigniter php platform applications"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "cd MyGroupReact/backend && npm start"]
build = ["sh", "-c", "chmod +x build.sh && ./build.sh"]

[workflows]
runButton = "Start Full Stack Development"

[[workflows.workflow]]
name = "Start Backend"
author = 40084709
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MyGroupReact/backend && npm run dev"

[[workflows.workflow]]
name = "Start Frontend"
author = 40084709
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm start"

[[workflows.workflow]]
name = "Install Dependencies"
author = 40084709
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MyGroupReact/backend && npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MyGroupReact/frontend && npm install --legacy-peer-deps"

[[workflows.workflow]]
name = "Start Full Stack"
author = 40084709
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MyGroupReact/backend && npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MyGroupReact/frontend && npm start"

[[workflows.workflow]]
name = "Start Full Stack Development"
author = 40084709
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MyGroupReact/backend && npm install && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MyGroupReact/frontend && npm install --legacy-peer-deps && npm start"

[[workflows.workflow]]
name = "Production Build"
author = 40084709
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x build.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./build.sh"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000
