<div class="d-flex align-items-center justify-content-center py-3">
	<div class="btn-group" id="main_button" role="group" aria-label="Basic example" style="width: 100%;">
	  <button type="button" onclick="get_button_group_page('union')" class="btn btn-secondary active">Union</button>
	  <button type="button" onclick="get_button_group_page('chats')" class="btn btn-secondary">Chats</button>
	  <button type="button" onclick="get_button_group_page('posts')" class="btn btn-secondary">Posts</button>
	  <button type="button" onclick="get_button_group_page('docs')" class="btn btn-secondary">Docs</button>
	  <button type="button" onclick="get_button_group_page('meetings')" class="btn btn-secondary">Meetings</button>
	</div>
</div>

<script type="text/javascript">
	
	$(".btn-group > .btn").click(function(){
    $(this).addClass("active").siblings().removeClass("active");
});
	
	function get_button_group_page(val) {
		if (val == 'union') {
			$('#chats').hide();
			$('#posts').hide();
			$('#docs').hide();
			$('#meetings').hide();
		}else if(val == 'chats'){
			$('#chats').show();
			$('#posts').hide();
			$('#docs').hide();
			$('#meetings').hide();
			$('#main_button .active').removeClass('active');
    	$(this).addClass('active');
		}else if(val == 'posts'){
			$('#chats').hide();
			$('#posts').show();
			$('#docs').hide();
			$('#meetings').hide();
		}else if(val == 'docs'){
			$('#chats').hide();
			$('#posts').hide();
			$('#docs').show();
			$('#meetings').hide();
		}else if(val == 'meetings'){
			$('#chats').hide();
			$('#posts').hide();
			$('#docs').hide();
			$('#meetings').show();
		}else{
			$('#chats').hide();
			$('#posts').hide();
			$('#docs').hide();
			$('#meetings').hide();
		}
	}
</script>

<div class="align-items-center justify-content-center py-3" id="chats" style="display: none;">
	<div class="btn-group" role="group" aria-label="Basic example" style="width: 100%;" >
	  <button type="button" class="btn btn-secondary active">Admin</button>
